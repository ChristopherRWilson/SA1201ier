{
  // SA1201ier Configuration File
  // Place this file (named .sa1201ierrc) in any directory to configure
  // formatting options for that directory and its subdirectories.
  //
  // Multiple .sa1201ierrc files can exist in different directories,
  // and they will be merged hierarchically (child overrides parent).
  //
  // CLI options override all config file settings.

  // Sort members alphabetically within the same access level and member type
  // Default: false
  "alphabeticalSort": false,

  // Sort top-level types (classes, records, interfaces) by access level
  // Default: false
  "sortTopLevelTypes": false
}
